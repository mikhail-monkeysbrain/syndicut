label
  cursor pointer
  position relative
  padding-left 25px
  margin-right 15px
  font-size 13px
  font-family flc
  color lightgray
  font-size 1.3rem
  text-transform none
  letter-spacing normal
  margin-bottom 1.3rem
  &:before
    content ""
    display inline-block
    size (1.2rem 1.2rem)
    margin-right 10px
    position absolute
    left 0
    bottom 1px
    background url('../img/icons/radio.png') center no-repeat
    background-size cover
input[type=radio]
  display none
  &:checked
    & + label
      &:before
        content ""
        font-size 30px
        text-align center
        line-height 18px
        background url('../img/icons/radio-checked.png') center no-repeat
        background-size cover
input[type=text],
input[type=phone],
input[type=password]
  background transparent
  outline none
  border 0
  border-bottom 1px solid
  color lightgray
  width 100%
  font-family flcc
  font-size 1.3rem
  letter-spacing .5rem
  text-transform uppercase
  padding .5rem 0 .3rem
  margin-bottom 1.3rem