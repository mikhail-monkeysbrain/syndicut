.header
  text-transform uppercase
  &-top
    background darkgray
    color #fff
    text-align center
    font-family flcc
  &-main
    center(100%)
    background rgba(0, 0, 0, .9)
    padding 2rem 0
    &-col
      column(
        3/10,
        $gutter: 0,
        $cycle: 3
      )
      position relative
      padding .7rem 3rem
    &-logo
      column(
        2/5,
        $gutter: 0,
        $cycle: 3
      )
      padding 1rem .5rem
  &-nav
    center(100%)
    background darkgray
    &-item
      column(
        1/7, 
        $gutter: 0,
        $cycle: 7
      )
      @extend .header-top
      text-align center
      color gray
      transition animation
      &:hover
        color white
        
  .social
    margin-top 1rem
    &-icon
      float left
      &:nth-child(2)
        margin 0 1rem

  .sign
    display flex
    justify-content flex-end
    align-items center
    margin-top .3rem
    &-rel
      font-family flcc
      color lightgray
      border-bottom 1px solid
      line-height 1.5
      transition animation
      margin-right .5rem
      &:hover
        color white
  .phone
    font-family flcc
    color #fff
    float right
    line-height 1.3
    margin 1rem 0
  .form  
    display none
    background darkgray
    position absolute
    padding 1rem 1.5rem
    &-add
      width 13.55rem
      left 3rem
      top 4.5rem
    &-registration
      width 21.2rem
      left inherit
      top 4.5rem
      right 3rem
      .btn
        margin-top 1rem
        margin-bottom 1.5rem